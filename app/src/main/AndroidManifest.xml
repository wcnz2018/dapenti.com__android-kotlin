<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.willchou.dapenti">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DaPenTiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presenter.MainActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presenter.DetailActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_detail"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presenter.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ColorTheme" />
        <activity
            android:name=".presenter.PageOrderActivity"
            android:label="@string/title_activity_page"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ColorTheme" />
        <activity
            android:name=".presenter.FavoriteActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_favorite"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ColorTheme" />
        <activity
            android:name=".presenter.FullScreenVideoActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:hardwareAccelerated="true" />
    </application>

</manifest>